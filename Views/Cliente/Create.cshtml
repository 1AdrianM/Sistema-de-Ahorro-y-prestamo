@using Sistema_De_Ahorro_y_Prestamos_v2.Data.Enum;
@using Sistema_De_Ahorro_y_Prestamos_v2.ViewModels
@model CreateClienteViewModel;
<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="~css/register.css">
        <title>Registracion</title>
    </head>
    <body >
        <div class="" style="height: 100vh;">
            <div class="container-fluid" >
                <div class="mt-2">
                         <h3 > Registrar Cliente </h3>

                                 <form method="post" asp-action="Create" class="row g-3" enctype="multipart/form-data">
                                <div class="col-md-6">
                                 <div class="form-group">
                                        <label class="form-label">Nombre: </label>
                                         <input asp-for="Nombre" type="text" class="form-control" id="Nombre" placeholder="Enter full name">
                                    </div>   
                                </div>
               <div class="col-md-6">
                      <div class="form-group">
                                        <label >Cedula:</label>
                                    <input asp-for="Cedula" type="text" class="form-control" placeholder="Enter ID">
                                   </div>               
                                </div>
                                     <div class="col-md-6"> 
                                              <div class="form-group">
                                        <label >Genero: </label>
<select asp-for="Genre" asp-items="@Html.GetEnumSelectList<Generos>()" class="form-control">                                                                    </select>                                 

        </div>
    </div>
                                   
                              
                                     <div class="col-md-6">
                                          <div class="form-group">
                                        <label >Telefono: </label>
                                    <input asp-for="Telefono" type="text" class="form-control"  placeholder="Telefono">
              </div>
    </div>
     <div class="col-md-12">
        <div class="form-group">
                      <label >Direccion: </label>
                     <input asp-for="Direccion" type="text" class="form-control"  placeholder="Address">
        </div>
    </div>
     <div class="col-md-6"> <div class="form-group">
                                        <label>Tipo de Cliente </label>
<select asp-for="TipoCliente" asp-items="@Html.GetEnumSelectList<Tipo_Cliente>()" class="form-control">                                                                    </select>                                 
                                                             </div></div>
    
                                   
                          <div class="col-md-6">    
                                    <div class="form-group">
                                    <label> Numero de cuenta de Banco</label>
<input asp-for="BancoCuenta" type="text" class="form-control">
                                    </div></div>         
                               <div class="col-12">                                  
                                  <button type="submit" class="btn btn-primary">Submit</button>
</div>
                                </form>
                            
                </div>

                <!-- Optional JavaScript -->
                <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
             </div>
         </div>
    </body>
</html>